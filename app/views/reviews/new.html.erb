<div class="container" style="margin-top: 20px">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= @restaurant.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.error_notification %>

        <%= f.input :content %>
        <%= f.input :rating, collection: (0..5).to_a %>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
